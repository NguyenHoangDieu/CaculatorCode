<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/solution_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/result_tv"
            android:layout_gravity="center|end"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            android:paddingLeft="320dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_layout"
            android:layout_gravity="center|end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/gray"
            android:paddingLeft="320dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_ce"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:backgroundTint="@color/gray2"
                    android:text="CE"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_c"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="C"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_bs"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="BS"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_dvs"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:backgroundTint="@color/gray"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_x"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="x"
                    android:textColor="@color/black"
                    android:textSize="22dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:backgroundTint="@color/gray"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_mn"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:backgroundTint="@color/gray"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_pl_mn"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:backgroundTint="@color/gray2"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textSize="22dp"></Button>

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

                <Button
                    android:id="@+id/button_equal"
                    android:layout_width="87.5dp"
                    android:layout_height="87.5dp"
                    android:layout_marginLeft="7dp"
                    android:backgroundTint="@color/gray2"
                    android:text="="
                    android:textColor="@color/black"
                    android:textSize="26dp"></Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

